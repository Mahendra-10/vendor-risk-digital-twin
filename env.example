# Vendor Risk Digital Twin - Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# Neo4j Graph Database Configuration
# ============================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# ============================================
# Google Cloud Platform Configuration
# ============================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_KEY_PATH=./config/secrets/gcp-service-account.json
GCP_REGION=us-central1

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=False

# ============================================
# Simulation Parameters
# ============================================
DEFAULT_FAILURE_DURATION_HOURS=4
REVENUE_PER_HOUR=150000
CUSTOMER_COUNT=50000

# ============================================
# Compliance Thresholds
# ============================================
SOC2_CRITICAL_THRESHOLD=0.15
NIST_CRITICAL_THRESHOLD=0.12
ISO27001_CRITICAL_THRESHOLD=0.10

